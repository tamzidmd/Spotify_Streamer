<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/album_image_imageview"
        android:layout_width="@dimen/results_thumbnail_size"
        android:layout_height="@dimen/results_thumbnail_size"
        android:padding="8dp"
        android:contentDescription="@string/album_image_content_description"
        tools:src="@drawable/abc_ic_clear_mtrl_alpha"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/song_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Song name"
            style="@style/TextAppearance.AppCompat.SearchResult.Title"/>

        <TextView
            android:id="@+id/album_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Album name"
            style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"/>

    </LinearLayout>


</LinearLayout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_dialog_player_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:background="@color/background_material_dark">

    <TextView
        android:id="@+id/fragment_player_artist_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white"
        tools:text="Artist Name"/>

    <TextView
        android:id="@+id/fragment_player_album_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        tools:text="Album Name"/>

    <ImageView
        android:id="@+id/fragment_player_albumart_imageview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        tools:src="@drawable/loading_image"
        android:scaleType="centerInside"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/fragment_player_track_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="@android:color/white"
        tools:text="Track Name"/>

    <SeekBar
        android:id="@+id/fragment_player_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/fragment_player_elapsedtime_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@android:color/white"
            tools:text="0:00"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/fragment_player_duration_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@android:color/white"
            tools:text="0:30"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/fragment_player_previous_imagebutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_media_previous"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/fragment_player_playpause_imagebutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_media_play"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/fragment_player_next_imagebutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_media_next"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
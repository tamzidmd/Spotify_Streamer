<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/artist_image_imageview"
        android:layout_width="@dimen/results_thumbnail_size"
        android:layout_height="@dimen/results_thumbnail_size"
        android:padding="8dp"
        android:contentDescription="@string/artist_image_content_description"
        tools:src="@drawable/abc_ic_clear_mtrl_alpha"/>

    <TextView
        android:id="@+id/artist_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        tools:text="Artist name"
        style="@style/Base.TextAppearance.AppCompat.SearchResult.Title"/>

</LinearLayout>